<!DOCTYPE html>
<html>
  <head>
    <title>Shipment Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", media: "all", href: asset_path("application.css") %>
    <% if controller.controller_name == 'admins' %>
      <%= stylesheet_link_tag "admin", "data-turbo-track": "reload", media: "all", href: asset_path("admin.css") %>
    <% elsif controller.controller_name == 'delivery_partners' %>
      <%= stylesheet_link_tag "delivery_partner", "data-turbo-track": "reload", media: "all", href: asset_path("delivery_partner.css") %>
    <% end %>
    <%= stylesheet_link_tag "customer", "data-turbo-track": "reload", media: "all" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="bg-gray-50 text-blue-900">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <div class="flex h-screen overflow-hidden bg-gray-50">
      <% if user_signed_in? %>
        <button class="sidebar-toggle-btn" onclick="toggleSidebar()">â˜°</button>
        <aside class="w-64 bg-white shadow-lg px-6 py-8 open <%= 'track-shipment-sidebar' if controller.controller_name == 'shipments' && action_name == 'track' %>" style="position: fixed; top: 0; left: 0; height: 100vh; z-index: 100;">
          <h2 class="text-3xl font-extrabold mb-8 text-blue-600 animate-bounce transition-all duration-700 uppercase">Shipment Tracker</h2>
          <nav class="space-y-6">
            <%= link_to "Dashboard", dashboard_shipments_path, class: "block w-full text-left px-6 py-4 rounded-lg bg-blue-100 text-blue-700 font-bold text-lg hover:shadow-lg transition-all duration-200" %>
            <%= link_to "My Shipments", shipments_path, class: "block w-full text-left px-6 py-4 rounded-lg bg-gray-100 text-gray-800 font-semibold text-lg hover:bg-blue-50 hover:shadow-lg transition-all duration-200" %>
            <%= link_to "Create Shipment", new_shipment_path, class: "block w-full text-left px-6 py-4 rounded-lg bg-green-100 text-green-700 font-semibold text-lg hover:bg-green-200 hover:shadow-lg transition-all duration-200" %>
            <%= link_to "Track Shipment", track_shipments_path, class: "block w-full text-left px-6 py-4 rounded-lg bg-yellow-100 text-yellow-700 font-semibold text-lg hover:bg-yellow-200 hover:shadow-lg transition-all duration-200" %>
          </nav>
        </aside>
      <% end %>
      <div class="flex flex-col flex-1 overflow-auto" style="margin-left: 16rem;">
        <header class="flex justify-end items-center bg-white shadow px-6 py-4">
          <% if user_signed_in? %>
            <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-xl">
              <%= current_user.email.present? ? current_user.email.first.upcase : "" %>
            </div>
            <nav class="ml-4">
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-red-600 bg-transparent border-none p-0 cursor-pointer", form: { data: { turbo: false } } %>
            </nav>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "mr-4" %>
            <%= link_to "Sign Up", new_user_registration_path %>
          <% end %>
        </header>
        <main class="flex-1 overflow-auto p-6">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
