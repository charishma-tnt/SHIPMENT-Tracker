<style>
  body {
    background-color: beige;
    min-height: 100vh;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<div style="background-color: black; max-width: 350px; max-height: 480px; padding: 20px; border-radius: 10px; color: white; box-shadow: 0 0 10px rgba(0,0,0,0.5); overflow-y: auto;">
  <h2 style="text-align: center; font-weight: 800; font-size: 24px; margin-bottom: 20px;">Pave your way to Shipment Tracker!</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div style="margin-bottom: 15px;">
      <%= f.label :email, "Username/email address", style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; border-radius: 5px; border: none;" %>
    </div>
    <div style="margin-bottom: 15px;">
      <%= f.label :password, style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 10px; border-radius: 5px; border: none;" %>
    </div>
    <div style="margin-bottom: 15px; display: flex; justify-content: space-between; align-items: center;">
      <%= link_to "Forgot password?", new_password_path(resource_name), style: "color: #3b82f6; text-decoration: underline; font-size: 14px;" %>
    </div>
    <div>
      <%= f.submit "Sign in", style: "width: 100%; background-color: #22c55e; color: white; font-weight: bold; padding: 12px; border-radius: 8px; border: none; cursor: pointer;" %>
    </div>
  <% end %>
  <div style="margin-top: 20px; text-align: center; font-size: 14px; color: #9ca3af;">
    <p>New to Shipment Tracker? <%= link_to "Create an account", new_registration_path(resource_name), style: "color: #3b82f6; text-decoration: underline;" %></p>
  </div>
</div>

