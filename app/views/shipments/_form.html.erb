<div class="max-w-2xl mx-auto">
  <div class="card p-4 bg-white rounded-lg shadow-md" style="max-height: 550px;">
    <%= form_with(model: shipment, local: true, class: "space-y-4") do |f| %>
      <div class="space-y-3">
        <div class="border rounded p-3 mb-3 shadow-sm" style="background:rgba(250, 253, 255, 0.96);">
          <h2 class="text-2xl font-semibold mb-2 text-gray-800"></h2>
          <p class="text-brown-600 mb-2" text_align="center" style="font-size: 1.1rem; font-weight: 500;">
            <img src="https://cdn-icons-png.flaticon.com/512/2921/2921824.png" alt="Box Logo" style="width: 40px; height: 40px; vertical-align: middle;text-align: center">
            Please fill in the details below to create a new shipment.
          </p>
        </div>
        <div class="p-2 bg-gray-50 rounded-md">
          <p style="margin-bottom: 1rem;">
            <strong style="color:rgb(62, 4, 4);">Source</strong>
            <%= f.label :-, class: "form-label block text-sm font-medium text-gray-1500" %>
            <%= f.text_field :source, class: "form-input mt-1 block w-32 rounded-md border-maroon-900 shadow-sm focus:border-black-500 focus:ring focus:ring-white-200 focus:ring-opacity-50", required: true %>
          </p>
        </div>
      </div>
      <div class="p-2 bg-gray-50 rounded-md div1">
        <p style="margin-bottom: 1rem;">
          <strong style="color:rgb(62, 4, 4);">Destination</strong>
          <%= f.label :-, class: "form-label block text-sm font-medium text-gray-700" %>
          <%= f.text_field :target, class: "form-input mt-1 block w-0.25 rounded-md border-gray-300 shadow-sm focus:border-white-500 focus:ring focus:ring-white-200 focus:ring-opacity-30", required: true %>
        </p>
      </div>
      <div class="p-2 bg-gray-50 rounded-md">
        <p style="margin-bottom: 1rem;">
          <strong style="color:rgb(62, 4, 4);">Item details</strong>
          <%= f.label :-, class: "form-label block text-sm font-medium text-gray-700" %>
          <%= f.text_area :item_details, rows: 2, class: "form-input mt-1 block w-0.5 rounded-md border-gray-300 shadow-sm focus:border-white-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50", required: true %>
        </p>
      </div>
      <% if current_user.admin? %>
        <div>
          <%= f.label :delivery_partner_id, class: "form-label block text-sm font-medium text-gray-700" %>
          <%= f.collection_select :delivery_partner_id, 
            DeliveryPartner.all, :id, :name, 
            {}, 
            class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
        </div>
        <div>
          <%= f.label :status, class: "form-label block text-sm font-medium text-gray-700" %>
          <%= f.select :status, 
            Shipment::STATUS_VALUES.keys.map { |s| [s.humanize, Shipment::STATUS_VALUES[s]] }, 
            {}, 
            class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
        </div>
      <% end %>
      <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200">
        <%= link_to "Cancel", shipments_path, class: "btn bg-gray-100 text-gray-700 hover:bg-gray-200" %>
        <%= f.submit "Create Shipment", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
