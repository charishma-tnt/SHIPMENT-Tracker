<div class="mt-8 bg-white rounded-xl shadow-lg p-6">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-medium">Shipment #<%= @shipment.id %></h3>
      <span class="px-3 py-1 rounded-full text-sm font-medium
        <%= status_color(@shipment.status) %>">
        <%= @shipment.status.humanize %>
      </span>
    </div>

    <div class="border-t border-gray-200 pt-4">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-sm font-medium text-gray-500">From</p>
          <p class="mt-1"><%= @shipment.source %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">To</p>
          <p class="mt-1"><%= @shipment.target %></p>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-200 pt-4">
      <div class="relative">
        <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-100">
          <div class="<%= progress_width(@shipment.status) %> shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"></div>
        </div>
        <div class="flex justify-between text-xs text-gray-500">
          <span>Pending</span>
          <span>In Transit</span>
          <span>Out for Delivery</span>
          <span>Delivered</span>
        </div>
      </div>
    </div>
  </div>
</div>
