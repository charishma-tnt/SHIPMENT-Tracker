<div style="background-color: white; max-width: 400px; margin: 50px auto; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
  <h2 style="text-align: center; font-weight: 800; font-size: 24px; margin-bottom: 20px;">Create a New Shipment</h2>
  <%= form_with model: @shipment, url: shipments_path, local: true do |f| %>
    <div style="margin-bottom: 15px;">
      <%= f.label :source, "Source", style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= f.text_field :source, class: "w-full px-3 py-2 border rounded-md" %>
    </div>
    <div style="margin-bottom: 15px;">
      <%= f.label :target, "Destination", style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= f.text_field :target, class: "w-full px-3 py-2 border rounded-md" %>
    </div>
    <div style="margin-bottom: 15px;">
      <%= f.label :item_details, "Item Details", style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= f.text_area :item_details, rows: 3, class: "w-full px-3 py-2 border rounded-md" %>
    </div>
    <div>
      <%= f.submit "Create Shipment", class: "w-full bg-blue-600 text-white py-3 rounded-md font-semibold hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
