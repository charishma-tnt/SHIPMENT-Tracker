<div class="tracking-form">
  <%= form_with url: track_shipments_path, method: :get, local: true do |f| %>
    <div class="field">
      <%= f.label :tracking_id, "Enter Tracking ID" %>
      <%= f.text_field :tracking_id, class: "form-input" %>
    </div>
    <%= f.submit "Track Shipment", class: "btn btn-primary" %>
  <% end %>
</div>
<style>
@media (prefers-color-scheme: dark) {
  body {
    background-color: rgb(201, 213, 219); /* Tailwind gray-900 */
  }
} else {
  
  body {
    background-color: #f3f4f6; /* Tailwind gray-100 */
  }
}