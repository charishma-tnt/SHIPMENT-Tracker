<%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
<% content_for :title, "Customer Dashboard" %>
<% content_for :page_twitter_site, "<meta name='x:site' content='@ShipTrack'>" %>
<% content_for :body_class, "bg-gray-50" %>
<div class="flex h-screen overflow-hidden bg-gray-50">
  <!-- Sidebar -->
  <aside class="sidebar bg-white w-64 px-6 py-8 shadow-lg flex flex-col justify-between">
    <div>
      <div class="flex items-center space-x-2 mb-8 px-4">
        <h1 class="text-xl font-bold text-black">Shipment Tracker</h1>
      </div>
      <div class="flex items-center space-x-4 mb-8 px-4">
        <div class="bg-blue-100 rounded-full p-1.5">
        </div>
        <div>
          <p class="font-semibold text-black"><%= current_user.customer&.name || current_user.email %> (Customer)</p>
          <p class="text-green-600 text-sm">Last login: <%= l(current_user.current_sign_in_at, format: :short) if current_user.respond_to?(:current_sign_in_at) && current_user.current_sign_in_at %></p>
        </div>
      </div>
      <nav class="px-4">
        <p class="text-xs font-semibold text-gray-500 uppercase mb-3">Navigation</p>
        <%= link_to customer_path, class: "flex items-center space-x-3 px-4 py-2 rounded-lg bg-blue-100 text-black font-semibold mb-2 hover:bg-blue-200 transition" do %>
          <span>Dashboard</span>
        <% end %>
        <%= link_to customer_path, class: "flex items-center space-x-3 px-4 py-2 rounded-lg text-gray-700 mb-2 hover:bg-gray-100 transition" do %>
          <span>My Shipments</span>
        <% end %>
        <%= link_to new_shipment_path, class: "flex items-center space-x-3 px-4 py-2 rounded-lg text-gray-700 mb-2 hover:bg-gray-100 transition" do %>
          <span>Create Shipment</span>
        <% end %>
        <%= link_to track_shipments_path, class: "flex items-center space-x-3 px-4 py-2 rounded-lg text-gray-700 mb-2 hover:bg-gray-100 transition" do %>
          <span>Track Shipment</span>
        <% end %>
      </nav>
      <!-- Account section removed as requested -->
      </nav>
    </div>
    <div class="px-4">
      <%= button_to role_selection_path, method: :get, class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition" do %>
        Switch to Delivery Partner View
      <% end %>
    </div>
  </aside>

  <!-- Main content -->
  <main class="flex-1 overflow-auto bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-10">
      <div class="flex items-center justify-between px-6 py-4">
        <h2 class="text-xl font-semibold text-gray-800" id="dashboardTitle">Dashboard</h2>
        <div class="flex items-center space-x-4">
          <div class="relative">
            <input type="text" placeholder="Search..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
          </div>
          <div class="relative">
            <button class="p-2 rounded-full hover:bg-gray-100">
              <i class="fas fa-bell text-gray-500"></i>
            </button>
            <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full"></span>
          </div>
        </div>
      </div>
    </header>

    <!-- Dashboard Content -->
    <section class="p-6">
      <h3 class="text-lg font-medium text-gray-800 mb-4">Welcome back <%= current_user.customer&.name || current_user.email %>!</h3>
      <p class="text-gray-600 mb-6">Here's an overview of your shipments.</p>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500">Total Shipments</p>
              <p class="text-2xl font-bold mt-1"><%= @shipments.count %></p>
            </div>
            <div class="bg-blue-100 p-3 rounded-full">
              <i class="fas fa-box text-blue-600"></i>
            </div>
          </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500">In Transit</p>
              <p class="text-2xl font-bold mt-1"><%= @shipments.select { |s| s.status == 2 }.count %></p>
            </div>
            <div class="bg-blue-100 p-3 rounded-full">
              <i class="fas fa-truck text-blue-600"></i>
            </div>
          </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500">Pending</p>
              <p class="text-2xl font-bold mt-1"><%= @shipments.select { |s| s.status == 0 }.count %></p>
            </div>
            <div class="bg-yellow-100 p-3 rounded-full">
              <i class="fas fa-clock text-yellow-600"></i>
            </div>
          </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500">Delivered</p>
              <p class="text-2xl font-bold mt-1"><%= @shipments.select { |s| s.status == 3 }.count %></p>
            </div>
            <div class="bg-green-100 p-3 rounded-full">
              <i class="fas fa-check-circle text-green-600"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-white p-6 rounded-lg shadow mb-6">
        <div class="flex justify-between items-center mb-4">
          <h4 class="text-lg font-medium text-gray-800">Recent Activity</h4>
        </div>
        <div class="space-y-4">
          <% @shipments.first(3).each do |shipment| %>
            <div class="flex items-start pb-4 border-b border-gray-100">
              <div class="bg-blue-100 p-2 rounded-full mr-3">
                <i class="fas fa-box text-blue-600"></i>
              </div>
              <div class="flex-1">
                <p class="font-medium">Shipment #<%= shipment.id %> <%= shipment.status_humanize %></p>
                <p class="text-sm text-gray-500"><%= l(shipment.updated_at, format: :short) %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex justify-between items-center mb-4">
          <h4 class="text-lg font-medium text-gray-800">Quick Actions</h4>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <%= button_to "Create New Shipment", new_shipment_path, method: :get, class: "bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg font-medium transition duration-200 flex items-center justify-center" %>
          <%= button_to "Track Shipment", track_shipments_path, method: :get, class: "bg-white border border-blue-600 text-blue-600 hover:bg-blue-50 py-3 px-4 rounded-lg font-medium transition duration-200 flex items-center justify-center" %>
        </div>
        <div class="mt-6">
          <h4 class="text-lg font-medium text-gray-800 mb-2">Track a Shipment</h4>
          <%= form_with url: track_shipments_path, method: :get, local: true, class: "flex gap-2" do %>
            <%= text_field_tag :shipment_id, params[:shipment_id], placeholder: "Enter Shipment ID", class: "border rounded-lg px-4 py-2 flex-1" %>
            <%= submit_tag "Track", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium" %>
          <% end %>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="text-xl font-medium text-gray-800 mb-4">My Shipments</h3>
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Shipment ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Destination</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Updated</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @shipments.each do |shipment| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap"><%= shipment.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= shipment.target %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= shipment.status_humanize %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= l(shipment.updated_at, format: :short) %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= link_to "Show", shipment_path(shipment), class: "text-blue-600 hover:underline" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>
</div> 

